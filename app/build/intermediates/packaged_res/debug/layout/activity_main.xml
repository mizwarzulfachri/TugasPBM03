<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_gravity="center"
            android:text="@string/selamat_datang_nsiapa_nama_anda"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="144dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:text="Daftar Mahasiswa"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/addText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#30ff"
                app:strokeWidth="5dp"
                app:strokeColor="@color/white"
                android:drawableLeft="@drawable/ic_baseline_android_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/nama"
                android:inputType="textPersonName"
                android:padding="18dp"
                android:textColor="@color/white"
                android:textColorHint="#212121"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="269dp" />

            <EditText
                android:id="@+id/addText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#30ff"
                android:drawableLeft="@drawable/ic_launcher_foreground"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/nim"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textColorHint="#212121"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="269dp" />

            <EditText
                android:id="@+id/addText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:autofillHints=""
                android:background="#30ff"
                android:drawableLeft="@drawable/prodi"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/prodi"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textColorHint="#212121"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="269dp" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/teal_200"
            android:padding="10dp"
            android:text="@string/tombol2"
            android:textColor="#0D47A1"
            android:textColorHighlight="@color/black"
            tools:ignore="TextContrastCheck"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/teal_200"
            android:padding="10dp"
            android:text="@string/tombol1"
            android:textColor="#0D47A1"
            android:textColorHighlight="@color/black"
            tools:ignore="TextContrastCheck"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="341dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>